@model Dictionary.Models.tblWord

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Cập nhật từ</h2>

    @using (Html.BeginForm())
    {
