        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </div>
    </div>
</div>
    }

    <div class="container">
        <div class="col-md-12">
            @Html.ActionLink("Trở lại danh sách", "Index", null, new { @class = "btn btn-default" })
        </div>
    </div>
</div>
